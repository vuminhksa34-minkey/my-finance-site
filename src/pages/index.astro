---
import Layout from "../layouts/Layout.astro";
import PriceTicker from "../components/PriceTicker.jsx";
import NewsFeed from "../components/NewsFeed.jsx";
import InternationalMarket from "../components/InternationalMarket.jsx";
import BondRates from "../components/BondRates.jsx";
---

<Layout>
  <h1 class="text-4xl font-bold mb-8 text-white">Tổng quan thị trường</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <section class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-white">📊 Giá cổ phiếu</h2>
      <PriceTicker client:visible />
    </section>
    
    <section class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-white">🏦 Trái phiếu</h2>
      <BondRates client:visible />
    </section>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
    <section class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-white">📰 Tin tức mới nhất</h2>
      <NewsFeed client:visible />
    </section>

    <section class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-white">🌍 Thị trường quốc tế</h2>
      <InternationalMarket client:visible />
    </section>
  </div>
</Layout>
