---
import Layout from "../layouts/Layout.astro";
import PriceTicker from "../components/PriceTicker.jsx";
---

<Layout title="Trang chủ" description="Tin tức và dữ liệu chứng khoán, trái phiếu, cổ phiếu realtime.">
  <section class="mb-6">
    <h2 class="text-lg font-semibold mb-2">📊 Giá cổ phiếu</h2>
    <PriceTicker client:visible />
  </section>

  <section class="mb-6">
    <h2 class="text-lg font-semibold mb-2">🏦 Trái phiếu</h2>
    <ul class="list-disc pl-5 text-sm">
      <li>Trái phiếu chính phủ 10 năm: <strong>3.52%</strong></li>
      <li>Trái phiếu doanh nghiệp: <strong>8.30%</strong></li>
    </ul>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-2">📰 Tin tức</h2>
    <ul class="list-disc pl-5 text-sm text-blue-600">
      <li><a href="#">FED giữ nguyên lãi suất</a></li>
      <li><a href="#">Giá dầu giảm, thị trường lo ngại</a></li>
    </ul>
  </section>
</Layout>
